{
  "version": 2,
  "buildCommand": "npm --prefix backend run vercel-build && rm -rf api/_backend_dist && mkdir -p api/_backend_dist && cp -R backend/dist/* api/_backend_dist/",
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "includeFiles": [
        "backend/dist/**"
      ]
    }
  },
  "routes": [
    { "src": "/api/health", "dest": "/api?path=health" },
    { "src": "/health", "dest": "/api?path=health" },
    { "src": "/api/(.*)", "dest": "/api?path=$1" },
    { "handle": "filesystem" }
  ],
  "env": {
    "NODE_ENV": "production",
    "CORS_ORIGIN": "https://decolagem-gf-frontend.vercel.app",
    "FRONTEND_URL": "https://decolagem-gf-frontend.vercel.app"
  }
}