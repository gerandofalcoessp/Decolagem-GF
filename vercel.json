{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "routes": [
    { "src": "/api/health", "dest": "/api?path=health" },
    { "src": "/health", "dest": "/api?path=health" },
    { "src": "/api/(.*)", "dest": "/api/[...path]" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://decolagem-gf-backend.vercel.app",
    "CORS_ORIGIN": "https://decolagem-gf-frontend.vercel.app",
    "FRONTEND_URL": "https://decolagem-gf-frontend.vercel.app"
  }
}